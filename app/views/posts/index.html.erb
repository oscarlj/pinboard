<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th> 
      <th>Content</th> 
      <th>Date</th>
      <th>Category</th>
      <th>Board</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <%= current_user %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.date %></td>
        <td><%= post.category.try :name %></td>
        <td><%= post.board.try :names %></td>
        <td><%= post.user %></td>
        <td><%= link_to 'Show', board_post_path(post.board, post) %></td>
        <td><%= link_to 'Edit', edit_board_post_path(post.board, post) %></td>
        <td><%= link_to 'Destroy', board_post_path(post.id, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_board_post_path %>
