<p id="notice"><%= notice %></p>

<div class="col-md-4">
  <div class="postshow">
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @post.content %>
    </p>

    <p>
      <strong>Date:</strong>
      <%= @post.date %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @post.category.name %>
